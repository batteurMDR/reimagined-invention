{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "lib": ["es2015"],
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "bin",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*"]
}